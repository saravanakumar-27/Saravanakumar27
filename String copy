#include<stdio.h>
void copystring(char source[],char destination[])
{
    int i=0;
    while(source[i]!='\0')
    {
        destination[i]=source[i];
        i++;
    }
destination[i]='\0';
}
int main()
{
    char source[100],destination[100];
    printf("Input string :");
    scanf("%s",source);
    copystring(source,destination);
    printf("Orginal string : %s\n",source);
    printf("Copied string : %s\n",destination);
    return 0;
}



